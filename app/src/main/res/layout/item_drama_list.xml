<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100">

    <ImageView
        android:id="@+id/iv_drama"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="center">
    </ImageView>



    <!--rating-->
    <RelativeLayout
        android:id="@+id/rating_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_toRightOf="@id/iv_drama"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_rating"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/yellow_star" />
        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_rating"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/dp_12"
            android:text="3.3333333"
            android:padding="@dimen/dp_5"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/iv_drama">

        <TextView
            android:id="@+id/tv_create_at"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_10"/>
        <TextView
            android:id="@+id/tv_drama_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_toLeftOf="@id/tv_create_at"
            android:text="我是標題"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"/>


    </RelativeLayout>





</RelativeLayout>
