<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_140"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_thumb"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_drama_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:textSize="@dimen/dp_12"
            android:gravity="center_vertical"
            android:text="asaaaa"/>

        <!--rating-->
        <RelativeLayout
            android:id="@+id/rating_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5">
            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/yellow_star"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@id/iv_star"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/dp_10"
                android:text="1.02333"/>
        </RelativeLayout>

        <!--觀看人數-->
        <RelativeLayout
            android:id="@+id/viewer_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5">
            <ImageView
                android:id="@+id/iv_view"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@mipmap/eye_open"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tv_view_count"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@id/iv_view"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/dp_10"
                android:text="1.02333"/>
        </RelativeLayout>
        <!--出版日期-->
        <RelativeLayout
            android:id="@+id/publish_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5">
            <TextView
                android:id="@+id/tv_publish_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/dp_10"
                android:text="@string/publish_title"/>

            <TextView
                android:id="@+id/tv_publish_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_toRightOf="@id/tv_publish_title"
                android:layout_marginLeft="@dimen/dp_5"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/dp_10"
                android:text="1.02333"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>